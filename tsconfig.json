{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017"],
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/types", "./node_modules/@types"]
  },
  "include": [
    "./server/**/*"
  ]
}
